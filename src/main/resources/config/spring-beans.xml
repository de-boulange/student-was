<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <import resource="university-beans.xml"/>

    <context:property-placeholder location="student.properties"/>

    <bean id="javaTask" class="org.skni.student_was.domain.Task">
        <property name="description" value="Zadanie nr 2 z Java Spring"/>
    </bean>

    <bean id="tomek" class="org.skni.student_was.domain.Student" primary="true">
        <property name="name" value="${student.name:Dzban}"/>
        <property name="year" value="${student.semester:1}"/>
        <constructor-arg index="0" ref="javaTask"/>
    </bean>

</beans>